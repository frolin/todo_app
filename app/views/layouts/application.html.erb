  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %>">


<div class="container-fluid">
  <div class="container">

    <% flash.each do |type, message| %>
      <div class="alert <%= bootstrap_class_for(type) %> fade in">
        <button class="close" data-dismiss="alert">Ã—</button>
