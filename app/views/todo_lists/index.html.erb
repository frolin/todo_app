

<p id="notice"><%= notice %></p>

<h1>Todo Lists →</h1>

  <div class="col-lg-12">
    <h2 style="display: inline">Проекты </h2>
    <%= link_to  "+", new_todo_list_path, data:{toggle: "modal", target: "my-modal"}, :class => "add_task", remote: true %>
<table class="table">
  <thead>
    <tr>
      <th><h3>Название</h3></th>
      <th><h3>Описание</h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr id="<%= dom_id(todo_list) %>">
        <td>
          <h3><%= link_to todo_list.title, todo_list_path(todo_list) %></h3>
        </td>
        <td>
          <h3><%= todo_list.description %></h3>
        </td>

        <td>Сделано:<%= todo_list.tasks.completed.count  %></td>
        <td><%= link_to 'Edit', edit_todo_list_path(todo_list) %></td>
        <td><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>


</div>
